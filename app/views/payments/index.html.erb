


<div class="row">
  <div class="col-sm-6">
    <h1>Payments</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_payment_path, class: 'btn btn-primary' do %>
    Add New Payment
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Time</th>
            <th>Amount</th>
            <th>Location</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @payments.each do |payment| %>
        <%= content_tag :tr, id: dom_id(payment), class: dom_class(payment) do %>
          

                      <td><%= payment.time %></td>
                      <td><%= payment.amount %></td>
                      <td><%= payment.location %></td>
          
          
            <td><%= link_to 'Show', payment %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
